---
import { i18n } from '../i18n';
import '../styles/global.css';
import Home from '../components/Home.astro';
import LanguageButtons from '../components/LanguageButtons.astro';
import ThemeController from '../components/ThemeController.astro';
import AnimatedBg from '../components/AnimatedBg.astro';
import ResumeLayout from './ResumeLayout.astro';
import Contact from '../components/Contact.astro';
import data from '../data.json';

// Define the props that can be passed to this layout
export interface Props {
  lang: string;
  image?: string;
}

const { lang, image = '/og-image.avif' } = Astro.props;

await i18n.changeLanguage(lang);
const { t } = i18n;

const title = `${t(data.profile.completeTitle)}- TypeScript | JavaScript | Angular | React`;
const description = t('seo.metaDescription');

// SEO configuration
const siteUrl = 'https://danncortes.com';
const currentUrl = `${siteUrl}${Astro.url.pathname}`;
const canonicalUrl = currentUrl;
const alternateEn = `${siteUrl}/en/`;
const alternateDe = `${siteUrl}/de/`;
const ogImage = `${siteUrl}${image}`;

// JSON-LD Structured Data
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: data.profile.name,
  jobTitle: t(data.profile.title),
  url: siteUrl,
  image: ogImage,
  address: {
    '@type': 'PostalAddress',
    addressLocality: t('lucerne'),
    addressCountry: 'CH'
  },
  email: 'danncortes@gmail.com',
  sameAs: [
    'https://linkedin.com/in/danncortes',
    'https://github.com/danncortes',
    'https://www.instagram.com/danncort/'
  ],
  knowsAbout: [
    'Frontend Development',
    'TypeScript',
    'JavaScript',
    'Angular',
    'React',
    'Web Development',
    'Software Architecture',
    'Web Optimization',
    'Scrum',
    'Clean Code'
  ],
  alumniOf: {
    '@type': 'EducationalOrganization',
    name: 'Instituto de Dise√±o de Caracas'
  }
};
---

<html lang={lang} data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1f2937" />
    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Alternate Language Links -->
    <link rel="alternate" hreflang="en" href={alternateEn} />
    <link rel="alternate" hreflang="de" href={alternateDe} />
    <link rel="alternate" hreflang="x-default" href={alternateEn} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content={lang === 'en' ? 'en_US' : 'de_CH'} />
    <meta property="og:site_name" content={t(data.profile.completeTitle)} />

    <!-- Author & Keywords -->
    <meta name="author" content={t(`${data.profile.name}`)} />
    <meta name="keywords" content={t('seo.metaKeywords')} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />
  </head>
  <body class="text-base-content">
    <AnimatedBg />
    <!-- Skip Link for Keyboard Navigation -->
    <a
      href="#main-content"
      class="btn btn-xs absolute -top-10 focus:top-2 left-2"
    >
      {t('skipToMainContent')}
    </a>
    <main id="main-content">
      <header
        role="banner"
        aria-label={t('siteHeader')}
        class="flex justify-between lg:justify-end items-center fixed top-0 left-0 right-0 z-[1000] p-4 bg-base-100 lg:bg-transparent"
      >
        <h2
          id="mobile-header-title"
          class="text-xl font-bold flex gap-2 block lg:hidden animate-on-scroll"
        >
          {t(`${data.profile.name}`)}
          <span class="font-light">|</span>
          <span class="font-light text-primary">{t(data.profile.title)}</span>
        </h2>
        <div class="flex gap-4">
          <LanguageButtons currentLang={lang} />
          <ThemeController />
        </div>
      </header>
      <section
        class="page page--home flex justify-center items-center-safe"
        id="home"
        tabindex="-1"
        aria-label={t('introduction')}
      >
        <Home greeting={t('greeting')} intro={t('profileInfo.intro')} />
      </section>
      <section
        class="page p-10 pt-20 flex justify-center"
        id="resume"
        tabindex="-1"
        aria-label={t('resumeSection')}
      >
        <ResumeLayout />
      </section>
      <section
        class="page page--about flex justify-center items-center-safe"
        id="about"
        tabindex="-1"
        aria-label={t('about.title')}
      >
        <div
          class="about-content flex flex-col md:flex-row justify-center items-center max-w-6xl p-14 gap-18 transition-all duration-300"
        >
          <img
            class="profile-pic w-80 h-80 object-cover rounded-full transition-all duration-300 shadow-2xl border border-3 border-base-300/40"
            src="/src/images/about-pic-2.avif"
            alt={t(data.profile.completeTitle)}
          />
          <div class="flex flex-col gap-4 items-start">
            <h2 class="text-4xl font-bold mb-4">{t('about.title')}</h2>
            {
              (t('about.description', { returnObjects: true }) as string[]).map(
                (paragraph: string) => (
                  <p class="text-lg text-base-content/80">{paragraph}</p>
                )
              )
            }
            <a href="#home" class="mt-4 btn btn-xs btn-primary">Home</a>
          </div>
        </div>
      </section>
      <footer
        role="contentinfo"
        aria-label={t('contactInformation')}
        class="lg:hidden p-2 fixed bottom-0 left-0 right-0 bg-base-100"
      >
        <Contact contactInfo={data.contactInfo} />
      </footer>
    </main>

    <script>
      // Update URL hash based on visible section and handle mobile header visibility
      const sections = document.querySelectorAll('section.page[id]');
      const mobileHeaderTitle = document.getElementById('mobile-header-title');
      const header = document.querySelector('header');
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting && entry.intersectionRatio >= 0.5) {
              const id = entry.target.getAttribute('id');
              if (id && window.location.hash !== `#${id}`) {
                history.replaceState(null, '', `#${id}`);
              }

              // Hide mobile header title when on home section
              if (mobileHeaderTitle) {
                if (id === 'home') {
                  mobileHeaderTitle.classList.add('!hidden');
                } else {
                  mobileHeaderTitle.classList.remove('!hidden');
                }
              }

              if (header) {
                if (id === 'home') {
                  header.classList.remove('bg-base-100');
                  header.classList.add('justify-end');
                } else {
                  header.classList.add('bg-base-100');
                  header.classList.remove('justify-end');
                }
              }
            }
          });
        },
        {
          threshold: 0.5,
          rootMargin: '0px'
        }
      );

      sections.forEach((section) => observer.observe(section));

      const currentHash = window.location.hash.replace('#', '') || 'home';
      if (mobileHeaderTitle && currentHash === 'home') {
        mobileHeaderTitle.classList.add('!hidden');
      }
    </script>
  </body>
</html>

<style>
  [data-theme='dark'] .page--about {
    background: -webkit-linear-gradient(
      to bottom,
      transparent,
      transparent,
      var(--color-gray-900)
    );
    background: linear-gradient(
      to bottom,
      transparent,
      transparent,
      var(--color-gray-900)
    );
  }
</style>
