---
import { i18n } from '../i18n';
import '../styles/global.css';
import Home from '../components/Home.astro';
import LanguageButtons from '../components/LanguageButtons.astro';
import ThemeController from '../components/ThemeController.astro';
import AnimatedBg from '../components/AnimatedBg.astro';
import ResumeLayout from './ResumeLayout.astro';
import Contact from '../components/Contact.astro';
import data from '../data.json';

// Define the props that can be passed to this layout
export interface Props {
  lang: string;
  image?: string;
}

const { lang, image = '/og-image.avif' } = Astro.props;

await i18n.changeLanguage(lang);
const { t } = i18n;

const title = `${t(data.profile.completeTitle)}- TypeScript | JavaScript | Angular | React`;
const description = t('seo.metaDescription');

// SEO configuration
const siteUrl = 'https://danncortes.com';
const currentUrl = `${siteUrl}${Astro.url.pathname}`;
const canonicalUrl = currentUrl;
const alternateEn = `${siteUrl}/en/`;
const alternateDe = `${siteUrl}/de/`;
const ogImage = `${siteUrl}${image}`;

// JSON-LD Structured Data
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: data.profile.name,
  jobTitle: t(data.profile.title),
  url: siteUrl,
  image: ogImage,
  address: {
    '@type': 'PostalAddress',
    addressLocality: t('lucerne'),
    addressCountry: 'CH'
  },
  email: 'danncortes@gmail.com',
  sameAs: [
    'https://linkedin.com/in/danncortes',
    'https://github.com/danncortes',
    'https://www.instagram.com/danncort/'
  ],
  knowsAbout: [
    'Frontend Development',
    'TypeScript',
    'JavaScript',
    'Angular',
    'React',
    'Web Development',
    'Software Architecture',
    'Web Optimization',
    'Scrum',
    'Clean Code'
  ],
  alumniOf: {
    '@type': 'EducationalOrganization',
    name: 'Instituto de Dise√±o de Caracas'
  }
};
---

<html lang={lang} data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1f2937" />
    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Alternate Language Links -->
    <link rel="alternate" hreflang="en" href={alternateEn} />
    <link rel="alternate" hreflang="de" href={alternateDe} />
    <link rel="alternate" hreflang="x-default" href={alternateEn} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content={lang === 'en' ? 'en_US' : 'de_CH'} />
    <meta property="og:site_name" content={t(data.profile.completeTitle)} />

    <!-- Author & Keywords -->
    <meta name="author" content={t(`${data.profile.name}`)} />
    <meta name="keywords" content={t('seo.metaKeywords')} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />
  </head>
  <body class="text-base-content overflow-hidden">
    <AnimatedBg />
    <!-- Skip Link for Keyboard Navigation -->
    <a
      href="#main-content"
      class="btn btn-xs absolute -top-10 focus:top-2 left-2"
    >
      {t('skipToMainContent')}
    </a>
    <main id="main-content">
      <header
        role="banner"
        aria-label={t('siteHeader')}
        class="flex justify-end items-center fixed top-0 left-0 right-0 z-[1000] p-2 px-3 sm:py-4 bg-base-100 lg:bg-transparent"
      >
        <h2
          id="mobile-header-title"
          class="lg:w-1/3 grow-2 text-sm sm:text-xl font-bold flex flex-col sm:flex-row sm:gap-2 block lg:hidden animate-on-scroll"
        >
          {t(`${data.profile.name}`)}
          <span class="font-light hidden sm:block">|</span>
          <span class="font-light text-primary">{t(data.profile.title)}</span>
        </h2>
        <nav class="flex justify-center grow-1 lg:w-1/3 lg:grow-0">
          <div class="flex gap-1 p-1 rounded-full bg-base-200">
            <a href="#home" class="btn btn-xs md:btn-sm rounded-full"> Home </a>
            <a href="#resume" class="btn btn-xs md:btn-sm rounded-full">
              Resume
            </a>
            <a href="#about" class="btn btn-xs md:btn-sm rounded-full">
              {t('about.title')}
            </a>
          </div>
        </nav>
        <div class="flex gap-2 sm:gap-4 grow-1 lg:w-1/3 lg:grow-0 justify-end">
          <LanguageButtons currentLang={lang} />
          <ThemeController />
        </div>
      </header>
      <section
        class="page page--home flex justify-center items-center-safe h-screen"
        id="home"
        tabindex="-1"
        aria-label={t('introduction')}
      >
        <Home greeting={t('greeting')} intro={t('profileInfo.intro')} />
      </section>
      <section
        class="page page-resume p-6 pb-12 sm:p-10 sm:pt-20 flex justify-center h-screen"
        id="resume"
        tabindex="-1"
        aria-label={t('resumeSection')}
      >
        <ResumeLayout />
      </section>
      <section
        class="page page--about flex justify-center items-center-safe h-screen"
        id="about"
        tabindex="-1"
        aria-label={t('about.title')}
      >
        <div
          class="about-content flex flex-col lg:flex-row justify-center items-center max-w-6xl p-8 pt-16 pb-12 sm:p-14 gap-8 sm:gap-18 transition-all duration-300"
        >
          <img
            class="profile-pic aspect-square max-w-[80%] sm:max-w-80 object-cover rounded-full transition-all duration-300 shadow-2xl border border-3 border-base-300/40"
            src="/images/about-pic-2.avif"
            alt={t(data.profile.completeTitle)}
          />
          <div class="flex flex-col gap-4 items-start">
            <h2 class="text-4xl font-bold mb-4">{t('about.title')}</h2>
            {
              (() => {
                const description = t('about.description', {
                  returnObjects: true
                });
                const paragraphs = Array.isArray(description)
                  ? description
                  : [description];
                return paragraphs.map((paragraph: string) => (
                  <p class="text-lg text-base-content/80">{paragraph}</p>
                ));
              })()
            }
            <a href="#home" class="mt-4 btn btn-sm btn-primary">Home</a>
          </div>
        </div>
      </section>
      <footer
        role="contentinfo"
        aria-label={t('contactInformation')}
        class="lg:hidden p-2 fixed bottom-0 left-0 right-0 bg-base-100/80"
      >
        <Contact contactInfo={data.contactInfo} />
      </footer>
    </main>

    <script>
      // Handle mobile header and header background based on URL hash
      const mobileHeaderTitle = document.getElementById('mobile-header-title');
      const header = document.querySelector('header');
      const nav = document.querySelector('nav');
      const navButtons = document.querySelectorAll('nav a');

      function updateHeaderForHash(hash: string) {
        navButtons.forEach((btn) => {
          btn.classList.remove('btn-primary');
          if (btn.getAttribute('href')?.includes(hash)) {
            btn.classList.add('btn-primary');
          }
        });

        // Update mobile header title visibility
        if (mobileHeaderTitle && nav) {
          if (hash === 'home') {
            mobileHeaderTitle.classList.add('!hidden');
            nav.classList.add('!hidden');
          } else {
            mobileHeaderTitle.classList.remove('!hidden');
            nav.classList.remove('!hidden');
          }
        }

        // Update header background
        if (header) {
          if (hash === 'home') {
            header.classList.remove('bg-base-100');
          } else {
            header.classList.add('bg-base-100');
          }
        }
      }

      // Listen for hash changes
      window.addEventListener('hashchange', () => {
        const hash = window.location.hash.replace('#', '') || 'home';
        updateHeaderForHash(hash);

        // Scroll to the section
        const section = document.getElementById(hash);
        if (section) {
          section.scrollIntoView({ behavior: 'smooth' });
        }
      });

      // Set initial state on page load
      const currentHash = window.location.hash.replace('#', '') || 'home';
      updateHeaderForHash(currentHash);
    </script>
  </body>
</html>

<style>
  [data-theme='dark'] .page--about {
    background: -webkit-linear-gradient(
      to bottom,
      transparent,
      transparent,
      var(--color-gray-900)
    );
    background: linear-gradient(
      to bottom,
      transparent,
      transparent,
      var(--color-gray-900)
    );
  }
</style>
