---
// Redirect to default language
const defaultLanguage = 'de'; // Change to 'de' if you prefer German as default

// Check if this is running on the server
if (Astro.request.headers.get('accept')?.includes('text/html')) {
  return Astro.redirect(`/${defaultLanguage}`);
}
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="refresh" content={`0;url=/${defaultLanguage}/`} />
    <style>
      @import 'tailwindcss';
    </style>
  </head>
  <body class="flex items-center justify-center min-h-screen bg-gray-100">
    <p class="text-lg text-gray-700">
      Redirecting to <a href={`/${defaultLanguage}`} class="text-blue-600 hover:underline">default language version</a>...
    </p>
  </body>
</html>
